<resources>
    
    <style name="Theme.Footballform" parent="@style/Theme.AppCompat">
        <item name="actionBarItemBackground">@drawable/selectable_background_footballform</item>
        <item name="popupMenuStyle">@style/PopupMenu.Footballform</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Footballform</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Footballform</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Footballform</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Footballform</item>
        <item name="actionModeBackground">@drawable/cab_background_top_footballform</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_footballform</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Footballform</item>

        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="YourAlertDialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowTitleStyle">@style/MyOwnDialogTitle</item>
    </style>

    <style name="MyOwnDialogTitle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBar.Solid.Footballform" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_footballform</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_footballform</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_footballform</item>
        <item name="progressBarStyle">@style/ProgressBar.Footballform</item>
    </style>
    
    <style name="ActionBar.Transparent.Footballform" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_footballform</item>
        <item name="progressBarStyle">@style/ProgressBar.Footballform</item>
    </style>
	
    <style name="PopupMenu.Footballform" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_footballform</item>
    </style>
	
    <style name="DropDownListView.Footballform" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_footballform</item>
    </style>
    
    <style name="ActionBarTabStyle.Footballform" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_footballform</item>
    </style>
	
    <style name="DropDownNav.Footballform" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_footballform</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_footballform</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_footballform</item>
    </style>
    
    <style name="ProgressBar.Footballform" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_footballform</item>
    </style>
    
    <style name="ActionButton.CloseMode.Footballform" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_footballform</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Footballform.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Footballform</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Footballform</item>
    </style>

    <style name="RadioButton">
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="FormItem" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/text_edit_single</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>